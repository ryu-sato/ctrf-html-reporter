{
  "name": "ctrf-html-reporter",
  "version": "1.1.13-rc",
  "description": "Report test result of CTRF (Common Test Report Format) as HTML.",
  "keywords": [
    "ctrf",
    "reporter",
    "html"
  ],
  "homepage": "https://github.com/ryu-sato/ctrf-html-reporter#readme",
  "bugs": {
    "url": "https://github.com/ryu-sato/ctrf-html-reporter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryu-sato/ctrf-html-reporter.git"
  },
  "license": "MIT",
  "author": "Ryu Sato",
  "type": "module",
  "main": "dist/bin/index.mjs",
  "bin": {
    "ctrf-html-reporter": "dist/bin/index.mjs"
  },
  "files": [
    "dist/bin/index.mjs",
    "dist/reporter/**/*"
  ],
  "scripts": {
    "test": "pnpm run bin:test",
    "build": "pnpm exec vite build",
    "bin:test": "vitest run",
    "bin:test:watch": "vitest",
    "bin:test:coverage": "vitest run --coverage",
    "bin:dev": "pnpm exec vite-node src/bin/index.mts",
    "reporter:dev": "vitepress dev src/reporter --host 0.0.0.0",
    "prereporter:build": "pnpm run clean",
    "reporter:build": "vitepress build src/reporter",
    "reporter:preview": "vitepress preview src/reporter",
    "prepare": "pnpm run clean && pnpm run build",
    "clean": "rm -rf dist src/reporter/.vitepress/{cache,dist}"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "chart.js": "^4.5.1",
    "commander": "^14.0.2",
    "ctrf": "^0.0.17",
    "fast-stats": "^0.0.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vitepress": "2.0.0-alpha.15",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/fast-stats": "^0.0.35",
    "@types/node": "^25.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "copy-file": "^11.1.0",
    "rollup-plugin-license": "^3.6.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-node": "^5.2.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@9.0.0"
}
