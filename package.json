{
  "name": "ctrf-html-reporter",
  "version": "1.1.20-rc",
  "description": "Report test result of CTRF (Common Test Report Format) as HTML.",
  "keywords": [
    "ctrf",
    "reporter",
    "html"
  ],
  "homepage": "https://github.com/ryu-sato/ctrf-html-reporter#readme",
  "bugs": {
    "url": "https://github.com/ryu-sato/ctrf-html-reporter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryu-sato/ctrf-html-reporter.git"
  },
  "license": "MIT",
  "author": "Ryu Sato",
  "type": "module",
  "main": "dist/bin/index.mjs",
  "bin": {
    "ctrf-html-reporter": "dist/bin/index.mjs"
  },
  "files": [
    "dist/bin/index.mjs",
    "dist/reporter/**/*"
  ],
  "scripts": {
    "test": "run-p bin:test",
    "test:ci": "run-p test test:e2e",
    "test:e2e": "npm run package:test",
    "build": "vite build",
    "bin:dev": "vite-node src/bin/index.mts",
    "bin:test": "vitest --config vitest.bin.config.ts",
    "bin:test:run": "npm run bin:test -- --run",
    "bin:test:watch": "npm run bin:test -- --watch",
    "bin:test:coverage": "npm run bin:test -- --coverage",
    "bin:lint": "eslint --config src/bin/eslint.config.mjs",
    "bin:lint:fix": "npm run bin:lint -- --fix",
    "reporter:dev": "vitepress dev src/reporter --host 0.0.0.0",
    "prereporter:build": "npm run clean",
    "reporter:build": "vitepress build src/reporter",
    "reporter:preview": "vitepress preview src/reporter",
    "reporter:lint": "eslint --config src/reporter/eslint.config.mjs",
    "reporter:lint:fix": "npm run reporter:lint -- --fix",
    "package:test": "vitest run --config vitest.package.config.ts",
    "clean": "run-p clean:reporter:vitepress clean:build clean:output",
    "clean:reporter:vitepress": "rm -rf src/reporter/.vitepress/{cache,dist}",
    "clean:build": "rm -rf dist",
    "clean:output": "rm -rf .ctrf",
    "lint": "run-p bin:lint reporter:lint",
    "lint:fix": "run-p bin:lint:fix reporter:lint:fix",
    "prepublishOnly": "run-s clean build",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "chart.js": "^4.5.1",
    "commander": "^14.0.2",
    "ctrf": "^0.0.17",
    "fast-stats": "^0.0.7",
    "tailwindcss": "^4.1.18",
    "vitepress": "2.0.0-alpha.15",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/fast-stats": "^0.0.35",
    "@types/node": "^25.0.1",
    "@types/send": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "copy-file": "^11.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-license": "^3.6.0",
    "send": "^1.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-node": "^5.2.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@9.0.0"
}
